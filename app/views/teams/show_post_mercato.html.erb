<div class="tab-content" id="team-tabs">
  <% if @team.players.count == 6%>
  <div class="map">
    <%= image_tag @team.players.find_by(role: 'top').image_url, class: 'player-input-btns top-map'%>
    <%= image_tag @team.players.find_by(role: 'jun').image_url, class: 'player-input-btns jun-map'%>
    <%= image_tag @team.players.find_by(role: 'mid').image_url, class: 'player-input-btns mid-map'%>
    <%= image_tag @team.players.find_by(role: 'adc').image_url, class: 'player-input-btns adc-map'%>
    <%= image_tag @team.players.find_by(role: 'sup').image_url, class: 'player-input-btns sup-map'%>
    <%= image_tag @team.players.last.image_url, class: 'player-input-btns all-map' %>
  </div>
  <div class="full-width">
    <div class="budget">
      <div id="rest">
        <h4> Rest of budget </h4>
        <p>500 000 <strong>$</strong></p> <!-- Ã  animer -->
      </div>
     <div class="create-bid" style="width:105px">
      <input type="submit" value="Create Bid" form='new_bid' class='create-bid-button'>
    </div>
    <div id="ongoing">
      <h4> Round bet </h4>
      <p> 500 000<strong>$</strong></p>
    </div>
  </div>
  <div class="description-list">
  <div class="w-40"><p style="margin-left:47px;">PLAYER</p></div>
  <div class="w-20"><p>TEAM</p></div>
  <div class="w-20"><p>ROLE</p></div>
  <div class="w-20"><p>STATUS</p></div>
  </div>
    <% @team.bids.each do |bid| %>
      <div class='card-product'>
        <div class='card-product-infos justify-content-between w-100 align-items-center'>
          <div class='w-40'><h3><%= bid.player.name %></h3></div>
          <div class='w-20'>
          <img class='team-image' src= <%=bid.player.image_url %> , style='height:35px; width:35px; margin-right: 43px; margin-bottom: 9px;'>
          </div>
          <div class='w-20'>
          <h3><%= bid.player.role %></h3></div>
          <% if bid.status == 'succeeded' %>
            <div class='w-20'><p>validated</p></div>
          <% elsif bid.status == 'pending' %>
            <div class='w-20'><p>pending</p></div>
          <% else %>
          <div class='w-20'><p>failed</p></div>
          <% end %>
        </div>
      </div>
    <% end %>
    <% end %>

  <div class="d-none">
    <% @players.each do |player| %>
      <div id="player_infos_<%= player.id %>">
        <%= render 'shared/modal_player_mercato', player: player %>
      </div>
    <% end %>
  </div>
