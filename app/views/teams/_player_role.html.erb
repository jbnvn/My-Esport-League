<%= f.association :player, collection: Player.send(role), as: :check_boxes, input_html: { class: 'd-none'},
    wrapper_html: { class: 'player-group d-none' , id: "#{role}-players"},
    label_method: lambda{ |player| "<label class='form-check-label collection_check_boxes' for='bid_player_id_#{player.id}'><div class='card-product'>
  <div class='card-product-infos'>
    <h1>#{player.name}<p></p>
    <p>Minimum Bet</p>
    <button type='button' class='btn btn-primary d-none' data-toggle='modal' data-target='#modal#{role.capitalize}Players'>
    </button>
  </h1></div>
</div>
</label>".html_safe } %>

<div class="modal fade" id="modal<%= role.capitalize %>Players" tabindex="-1" role="dialog" aria-labelledby="modal<%= role.capitalize %>Players" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Minimum Bet</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h1><%= role %></h1>
      </div>
      <div class="modal-footer">
        <div class="form-group decimal optional <%= role %>_bid_points">
          <label class="decimal optional" for="<%= role %>_bid_points"><%= role.capitalize %> Points</label>
          <input class="form-control numeric decimal optional" type="number" step="any" name="bid[<%= role %>_points]" id="<%= role %>_bid_points">
        </div>

        <button type="button" data-dismiss="modal" onclick="document.validateForm2()">Create BID</button>
      </div>
    </div>
  </div>
</div>
