<div class="tab-content" id="team-tabs">
  <div class="map">
    <%= image_tag "buttonplayer.png", class: 'player-input-btns top-map', id:"top"%>
    <%= image_tag "buttonplayer.png", class: 'player-input-btns jun-map', id:"jun"%>
    <%= image_tag "buttonplayer.png", class: 'player-input-btns mid-map', id:"mid"%>
    <%= image_tag "buttonplayer.png", class: 'player-input-btns adc-map', id:"adc"%>
    <%= image_tag "buttonplayer.png", class: 'player-input-btns sup-map', id:"sup"%>
    <%= image_tag "buttonplayer.png", class: 'player-input-btns all-map', id:"all"%>
  </div>
  <div class="full-width">
    <div class="budget">
      <div id="rest">
        <h4> Rest of budget </h4>
        <p>300 000 <strong>PI</strong></p> <!-- Ã  animer -->
      </div>
     <div class="create-bid" style="width:105px">
      <input type="submit" value="Create Bid" form='new_bid' class='d-none' id="validate-button">
    </div>
    <div id="ongoing">
      <h4> Round bet </h4>
      <p> 0 <strong>PI</strong></p>
    </div>
  </div>
<div class="description-list">
  <div class="w-40"><p style="margin-left:47px;">PLAYER</p></div>
  <div class="w-20"><p>TEAM</p></div>
  <div class="w-20"><p>ROLE</p></div>
  <div class="w-20"><p>PRICE</p></div>
</div>
  <div id="show-players">
    <div class="card-product1 player-input-btns" id="top">
              <div class="card-product-infos d-flex w-100 align-items-center">
          <div class="d-inline">
            <p>Choose your TOP player</p>
            <p id="top-bid"></p>
          </div>
          <div class="list-img d-inline ml-auto">
            <%= image_tag "buttonplayer.png", class: 'player-input-btns w-30 h-30', id:"top"%>
          </div>
        </div>
    </div>
    <div class="card-product1 player-input-btns" id="jun">
      <div class="card-product-infos d-flex w-100 align-items-center">
        <div class="d-inline">
        <p>Choose your JUNGLE player</p>
        <p id="jun-bid"></p>
        </div>
        <div class="list-img d-inline ml-auto">
          <%= image_tag "buttonplayer.png", class: 'player-input-btns w-30 h-30', id:"jun"%>
        </div>
      </div>
    </div>
    <div class="card-product1 player-input-btns" id="mid">
      <div class="card-product-infos d-flex w-100 align-items-center">
        <div class="d-inline">
        <p>Choose your MID player</p>
        <p id="mid-bid"></p>
        </div>
        <div class="list-img d-inline ml-auto">
          <%= image_tag "buttonplayer.png", class: 'player-input-btns w-30 h-30', id:"mid"%>
        </div>
      </div>
    </div>
    <div class="card-product1 player-input-btns" id="adc">
      <div class="card-product-infos d-flex w-100 align-items-center">
        <div class="d-inline">
        <p>Choose your ADC player</p>
        <p id="adc-bid"></p>
        </div>
        <div class="list-img d-inline ml-auto">
          <%= image_tag "buttonplayer.png", class: 'player-input-btns w-30 h-30', id:"adc"%>
        </div>
      </div>
    </div>
    <div class="card-product1 player-input-btns" id="sup">
      <div class="card-product-infos d-flex w-100 align-items-center">
        <div class="d-inline">
        <p>Choose your SUPPORT player</p>
        <p id="sup-bid"></p>
        </div>
        <div class="list-img d-inline ml-auto">
          <%= image_tag "buttonplayer.png", class: 'player-input-btns w-30 h-30', id:"sup"%>
        </div>
      </div>
    </div>
    <div class="card-product1 player-input-btns" id="all">
      <div class="card-product-infos d-flex w-100 align-items-center">
        <div class="d-inline">
        <p>Choose your SUB player</p>
        <p id="sub-bid"></p>
        </div>
        <div class="list-img d-inline ml-auto">
          <%= image_tag "buttonplayer.png", class: 'player-input-btns w-30 h-30', id:"sub"%>
        </div>
      </div>
    </div>
  </div>
  <div class="list-of-players">
    <%= simple_form_for [@team, @bid] do |f| %>
      <% Player::roles.keys.each do |role| %>
        <%= render 'player_role', f: f, role: role %>
      <% end %>
     <%= f.association :player, collection: Player.order(minimum_bid: :desc), as: :check_boxes, input_html: { class: 'd-none'}, wrapper_html: { class: 'player-group d-none', id: 'all-players'},
     label_method: lambda{ |player| "<label class='form-check-label collection_check_boxes' for='bid_player_id_#{player.id}'><div class='card-product'>
  <div class='card-product-infos justify-content-between w-100 align-items-center'>
  <div class='w-40'><h3>#{player.name}</h3></div>
  <div class='w-20'>
  <img class='team-image' src='#{player.pro_team_image_url}' style='height:35px; width:35px; margin-right: 43px; margin-bottom: 9px;'>
  </div>
  <div class='w-20'>
  <h3>#{player.role}</h3></div>
  <div class='w-20'><p>#{player.minimum_bid.round} PI</p></div>
    <button type='button' class='btn btn-primary d-none' data-toggle='modal' data-target='#modalAllPlayers'>
    </button>
  </div>
</div>
<div id=#{player.id} data-modal='modalAllPlayers'></div>
</label>".html_safe } %>
    <div class="modal fade" id="modalAllPlayers" tabindex="-1" role="dialog" aria-labelledby="modalAllPlayers" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content modal-content-player">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <div class="modal-body">
        </div>
        <div class="modal-footer">
          <div class="form-group decimal optional all_bid_points">
            <label class="decimal optional" for="all_bid_points">Sub Points</label>
            <input class="form-control numeric decimal optional bid-points" type="number" step="any" name="bid[all_points]" id="all_bid_points" data-position="sub">
          </div>
          <button type="button" class="button-to-click btn btn-small-blue3" data-dismiss="modal">Create BID</button>
        </div>
      </div>
    </div>
  </div>
    <% end %>
   </div>
  <div class="d-none">
    <% @players.each do |player| %>
      <div id="player_infos_<%= player.id %>">
        <%= render 'shared/modal_player_mercato', player: player %>
      </div>
    <% end %>
  </div>


  <div class="d-none">
    <% @players.each do |player| %>
      <div id="player_placeholder_infos_<%= player.id %>" data-name="<%= player.name %>" data-role="<%= player.role %>">
      </div>
    <% end %>
  </div>


<div>
<% if @team.players.present? %>
  <% @team.bids.each do |bid| %>
    <div class="card-product1-validate">
      <div class="card-product-infos-validate">
        <h2><%= bid.player.role %></h2>
        <p><%= bid.player.name %></p>
        <p><%= bid.status %></p>
        <%#= image_tag player.image_url, alt: "alttext" %>
        <%#= image_tag player.pro_team_image_url, alt: "alttext" %>
      </div>
    </div>
  <% end %>
<% end %>
</div>











