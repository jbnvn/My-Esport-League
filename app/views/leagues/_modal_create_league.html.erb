<div class="modal fade" id="createleagueModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Choose your league's name</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(league) do |f| %>
          <%= f.input :name %>
          <%= f.submit "Create", class: 'btn btn-center-blue' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
