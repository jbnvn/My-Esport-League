<%= @league.name %>
<div class="creation-card">
  <h2>Edit your League</h2>
   <%= link_to "edit", edit_league_path, class: 'btn btn-primary' %>
</div>

  <%= link_to "Delete", @league, class: 'btn btn-primary',
    method: :delete,
    data: { confirm: "Are you sure?" }  %>

  <h2>Create your Team</h2>
   <%= link_to "+", new_league_team_path(@league),  class: 'btn btn-primary' %>
</div>

<ul>
    <% @league.teams.each do |team| %>
    <li> <%=link_to team.name, team_path(team)%>   </li>

    <% end %>
</ul>

<ul>
  <li><%= @league.creator.username %></li>
  <% @league.participations.each do |participant| %>
  <li>
    <%= User.find(participant.user_id).username %>
  </li>
    <% end %>
</ul>

<h3>Add a friend</h3>
<ul>
 <% User.all.each do |user| %>
  <% unless user == @league.creator  %>
 <li>
   <%= link_to user.username, participations_path(league_id: @league.id, user_id: user.id), method: :post %>
 </li>
   <% end %>
 <% end %>
</ul>




