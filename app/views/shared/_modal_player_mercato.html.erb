
<div class="p-2 rounded">
  <div class="card-player d-flex w-100">
    <div class="p-1">
      <% if player.image_url.present? %>
        <%= image_tag player.image_url, class: "avatar-large", alt: "avatar-large" %>
      <% else %>
      <!-- placeholder to put -->
        <p>placeholder</p>
      <% end %>
    </div>
    <div class="my-auto flex-grow-1">
      <div class="card-player-infos">
        <div>
          <% if player.name.present? %>
            <h2><%= player.name %></h2>
          <% else %>
          <!-- placeholder to put -->
            <p>placeholder</p>
          <% end %>

          <% if player.pro_team_acronym.present? %>
            <p><%= player.pro_team_acronym %></p>
          <% else %>
          <!-- placeholder to put -->
            <p>placeholder</p>
          <% end %>

        </div>
        <div class="team-avatar">
        <!-- <p>team_logo</p> -->
          <% if player.pro_team_image_url.present? %>
            <%= image_tag player.pro_team_image_url, class: "team-avatar", alt: "avatar" %>
          <% else %>
            <!-- placeholder to put -->
            <p>placeholder</p>
          <% end %>
        </div>
      </div>
      <div class="card-player-infos">
        <div class="d-flex">
          <p><%= player.first_name %> <%= player.last_name %>aaaa</p>
          <i class="fas fa-ad">ddddd</i>
        </div>
        <div>
          <%if player.role.present? %>
            <h2 id="role"><%= player.role %></h2>
          <% else %>
            <!-- placeholder to put -->
            <p>placeholder</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>


<!-- Stats Carousel -->
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="card-player carousel-stats carousel-inner">
      <div class="carousel-item active">
      <!-- <img src="https://source.unsplash.com/1600x900/?stats" class="d-block w-100" alt="..."> -->
        <div class="d-flex">
          <div class="carousel-block">
            <h2>Last game</h2>
            <div class="my-4 py-2">
              <div>
                <!-- <p class="fas fa-shield-alt"></p> -->
                <p class=""><strong>KDA  </strong> <%= player.kda.round(2)  %></p>
              </div>
              <div>
                <p class=""><strong>WR  </strong> <%= (player.win_rate.round(2) * 100).round %> % </p>
              </div>
              <div>
                <p class=""><strong>KS  </strong> <%= (player.kill_share.round(2) * 100).round %> % </p>
              </div>
            </div>
          </div>
          <div class="carousel-block-season">
            <h2>Season average</h2>
            <div class="my-4 py-2">
              <div>
                <p class=""><strong>KDA  </strong> <%= player.kda.round(2)  %></p>
              </div>
              <div>
                <p class=""><strong>WR  </strong> <%= (player.win_rate.round(2) * 100).round %> % </p>
              </div>
              <div>
                <p class=""><strong>KS  </strong> <%= (player.kill_share.round(2) * 100).round %> % </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <!-- <img src="https://source.unsplash.com/1600x900/?stats" class="d-block w-100" alt="..."> -->
        <div class="d-flex">
          <div class="carousel-block">
            <h2>Last game</h2>
            <div class="my-4 py-2">
              <div>
                <p class=""><strong>GS  </strong> <%= (player.gold_share.round(2) * 100).round %> % </p>
              </div>
              <div>
                <p class=""><strong>KPAR  </strong> <%= (player.kill_participation.round(2) * 100).round %> % </p>
              </div>
              <div>
                <p class=""><strong>CSPM  </strong> <%= player.creep_score_per_minute.round(2) %> </p>
              </div>
            </div>
          </div>
          <div class="carousel-block-season">
            <h2>Season average</h2>
            <div class="my-4 py-2">
              <div>
                <p class=""><strong>GS  </strong> <%= (player.gold_share.round(2) * 100).round %> % </p>
              </div>
              <div>
                <p class=""><strong>KPAR  </strong> <%= (player.kill_participation.round(2) * 100).round %> % </p>
              </div>
              <div>
                <p class=""><strong>CSPM  </strong> <%= player.creep_score_per_minute.round(2) %> </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- buttons controller -->
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    <!-- buttons controller-->

  </div>
</div>
